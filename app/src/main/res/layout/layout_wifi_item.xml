<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px">

   <TextView
       android:layout_marginBottom="6dp"
       android:layout_marginLeft="25dp"
       android:layout_gravity="center_vertical"
       android:textColor="#ff666666"
       android:textSize="32px"
       android:id="@+id/list_wifi_ssid"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView

       android:layout_marginLeft="20dp"
       android:layout_marginBottom="1dp"
       android:layout_gravity="bottom"
       android:textSize="14sp"
       android:textColor="#999999"
       android:id="@+id/list_wifi_state"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <ImageView
       android:layout_marginRight="25dp"
       android:src="@drawable/wifi_signal_level"
       android:id="@+id/list_wifi_signal"
       android:layout_gravity="right"
       android:layout_width="25dp"
       android:layout_height="match_parent" />
   <ImageView
       android:src="@drawable/wifi_statue_lock"
       android:layout_marginRight="60dp"
       android:layout_gravity="right"
       android:id="@+id/list_wifi_lock"
       android:layout_width="16dp"
       android:layout_height="match_parent" />

   <View
       android:id="@+id/list_wifi_bottom_line"
       android:layout_gravity="bottom"
       android:background="#ff666666"
       android:layout_height="1px"
       android:layout_width="match_parent" />
</FrameLayout>